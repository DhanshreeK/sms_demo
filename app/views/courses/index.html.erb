<%= render 'layouts/messages'%>
<div class="row">
        <div class="col-lg-12">
        <br><br>
          <div class="panel panel-default">
            <div class="panel-heading clearfix">
              <h3 class="panel-title">Courses</h3>
              <ul class="panel-tool-options"> 
                <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
              </ul>
            </div>
            <div class="panel-body">
            <%= link_to 'New Course', new_course_path,class: 'btn btn-link'%>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTables-example" >
<p id="notice"><%= notice %></p>
  <thead>
    <tr>
      <th>Course type</th>
      <th>University</th>
      <th>No of seats</th>
      <th>Fees</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_type.course_type_name %></td>
        <td><%= course.university.university_name %></td>
        <td><%= course.no_of_seats %></td>
        <td><%= course.fees %></td>
        <td><%= course.status %></td>
        <td><%= link_to 'Show', course,class: "btn btn-blue btn-sm" %></td>
        <td><%= link_to 'Edit', edit_course_path(course),class: "btn btn-success btn-sm" %></td>
        <!-- <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-red btn-sm" %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>