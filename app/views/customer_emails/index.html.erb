<%= render 'layouts/messages'%> 
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">Email</h3>
        <ul class="panel-tool-options"> 
          <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
          <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
          <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
        </ul>
      </div>
      <div class="panel-body">
         <div class="panel-body collapse in" id="collapsepanel">
            <ol class="breadcrumb breadcrumb-2"> 
              <li><a href="/home/dashboard"><i class="icon-folder"></i>Home</a></li> 
              <li class="active">Email</li> 
            </ol> 
          </div>
           <%= link_to 'New Customer Email', new_customer_email_path, class: 'btn btn-red btn-outline' %><p>&nbsp;</p>
  
    <h4>Import Emails</h4>
        <%= form_tag import_customer_emails_path, multipart: true do %>
          <%= file_field_tag :file,class: 'form-control' %>
          <%= submit_tag "Import", class: 'btn btn-info' %>
        <% end %>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example" >
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_emails.each do |customer_email| %>
      <tr>
        <td><%= customer_email.email %></td>
        <td><%= link_to 'Show', customer_email %></td>
        <td><%= link_to 'Edit', edit_customer_email_path(customer_email) %></td>
        <td><%= link_to 'Destroy', customer_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

