                        <div class="panel-body"> 
<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="col-md-4">
        <label for="text_input" class="label_height">Name</label>
           <span style="color:red">*</span>
    <%= form.text_field :name, id: :employee_name, placeholder: 'Employee Name' , class: 'form-control'%>
  </div>

    <div class="col-md-4">
        <label for="text_input" class="label_height">Designation</label>
           <span style="color:red">*</span>
    <%= form.text_field :designation, id: :employee_designation, placeholder: 'Employee Designation',  class: 'form-control' %>
  </div>

    <div class="col-md-4">
        <label for="text_input" class="label_height">Adhar Card No</label>
           <span style="color:red">*</span>
    <%= form.text_field :adhar_card_no, id: :employee_adhar_card_no, placeholder: 'Employee Adhar No', class: 'form-control'%>
  </div>

    <div class="col-md-4">
        <label for="text_input" class="label_height">Contact</label>
           <span style="color:red">*</span>
    <%= form.text_field :contact_no, id: :employee_contact_no,placeholder: 'Contact', class: 'form-control' %>
  </div>

    <div class="col-md-4">
        <label for="text_input" class="label_height">Alternate Contact</label>
           <span style="color:red">*</span>
    <%= form.text_field :alternate_contact_no, id: :employee_alternate_contact_no, placeholder: 'Alternate Contact' , class: 'form-control'%>
  </div>

   <div class="col-md-4">
        <label for="text_input" class="label_height">Email</label>
           <span style="color:red">*</span>
    <%= form.text_field :email, id: :employee_email, placeholder: 'Email',  class: 'form-control'%>
  </div>

  <div class="col-md-4">
        <label for="text_input" class="label_height">Joining Date</label>
           <span style="color:red">*</span>
    <%= form.date_field :joining_date, id: :employee_joining_date, placeholder: 'Joining Date',  class: 'form-control'%>
  </div>

   <div class="col-md-4">
        <label for="text_input" class="label_height">Birth Place</label>
           <span style="color:red">*</span>
    <%= form.text_field :birth_place, id: :employee_birth_place, placeholder: 'Birth Date',class: 'form-control' %>
  </div>

    <div class="col-md-4">
        <label for="text_input" class="label_height">Address</label>
           <span style="color:red">*</span>
    <%= form.text_field :address, id: :employee_address, placeholder: 'Address',class: 'form-control' %>
  </div>

   <div class="col-md-4">
        <label for="text_input" class="label_height">Employee No</label>
           <span style="color:red">*</span>
    <%= form.text_field :employee_no, id: :employee_employee_no, placeholder: 'Employee No',class: 'form-control' %>
  </div>

    <div class="col-md-4">
        <label for="text_input" class="label_height">Center Select</label>
           <span style="color:red">*</span>
    <%= form.select :center_id, Center.all.collect{|c| [c.center_name,c.id]}, {prompt:true},id: 'employee_center_id',class: "form-control selectpicker", "data-live-search" => "true" 
 %>
    <br><br>
  </div>

  <div class="col-sm-4 col-sm-offset-4 input_success">
    <%= form.submit "Submit", class: 'btn btn-red btn-md form-control' %>
  </div>
<% end %>
