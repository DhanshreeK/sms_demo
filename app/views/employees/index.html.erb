<%= render 'layouts/messages'%> 
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <h3 class="panel-title">Employee Details</h3>
        <ul class="panel-tool-options"> 
          <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
          <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
          <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
        </ul>
      </div>
      <div class="panel-body">
                  <%= link_to 'New Employee', new_employee_path, class: 'btn btn-red btn-outline' %><p>&nbsp;</p>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example" >
            <thead>
              <tr>
               <th>SR No</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Employee no</th>
                <th>Status</th>
               <th></th>
               <th></th>
             </tr>
           </thead>
           <tbody>
         <% @employees.each_with_index do |employee,i| %>
            <tr class="gradeX">
             <td><%= i+1 %></td>
            <td><%= employee.name %></td>
            <td><%= employee.designation %></td>
            <td><%= employee.employee_no %></td>
            <td><%= employee.employee_status %></td>
            <td><%= link_to 'Show', employee,class: "btn btn-blue btn-sm" %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee),class: "btn btn-success btn-sm" %></td></i>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>




<script>
  $(document).ready(function () {
    $('.dataTables-example').DataTable({
      dom: '<"html5buttons" B>lTfgitp',
      buttons: [
      {
        extend: 'copyHtml5',
        exportOptions: {
          columns: [ 0, ':visible' ]
        }
      },
      {
        extend: 'excelHtml5',
        exportOptions: {
          columns: ':visible'
        }
      },
      {
        extend: 'pdfHtml5',
        exportOptions: {
          columns: [ 0, 1, 2, 3, 4 ]
        }
      },
      'colvis'
      ]
    });
  });
</script>
