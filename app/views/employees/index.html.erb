<%= render 'layouts/messages'%>
<div class="row">
        <div class="col-lg-12">
        <br><br>
          <div class="panel panel-primary">
            <div class="panel-heading clearfix">
              <h3 class="panel-title">Employee Details</h3>
              <ul class="panel-tool-options"> 
                <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
              </ul>
            </div>
            <div class="panel-body">
            <%= link_to 'New Employee', new_employee_path, class: 'btn btn-link' %>

              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTables-example" >
<p id="notice"><%= notice %></p>
  <thead>
    <tr>
      <th>Name</th>
      <th>Designation</th>
      <th>Adhar card no</th>
      <th>Contact no</th>
      <th>Alternate contact no</th>
      <th>Email</th>
      <th>Joining date</th>
      <th>Birth place</th>
      <th>Address</th>
      <th>Employee no</th>
      <th>Center</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.adhar_card_no %></td>
        <td><%= employee.contact_no %></td>
        <td><%= employee.alternate_contact_no %></td>
        <td><%= employee.email %></td>
        <td><%= employee.joining_date %></td>
        <td><%= employee.birth_place %></td>
        <td><%= employee.address %></td>
        <td><%= employee.employee_no %></td>
        <td><%= employee.center.center_name %></td>
        <td><%= employee.employee_status %></td>
        <td><%= link_to 'Show', employee,class: "btn btn-blue btn-sm" %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee),class: "btn btn-success btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
</div>
</div>