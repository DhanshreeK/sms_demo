<%= render 'layouts/messages'%>
<div class="row">
        <div class="col-lg-12">
        <br><br>
          <div class="panel panel-primary">
            <div class="panel-heading clearfix">
              <h3 class="panel-title">Enquiry Details</h3>
              <ul class="panel-tool-options"> 
                <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
              </ul>
            </div>
            <div class="panel-body">
             <%= link_to 'New Enquiry', new_enquiry_path, class: 'btn btn-link'%>
             <div class= "pull-right">
              <b><%= link_to "Export CSV", enquiries_path(format: "csv") %></b> |
              <b><%= link_to "Excel", enquiries_path(format: "xls") %></b>
              </div>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTables-example" >
<p id="notice"><%= notice %></p>

  <thead>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Contact no</th>
      <th>Alternate contact no</th>
      <th>Center</th>
      <th>Counselling Done By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enquiries.each do |enquiry| %>
      <tr>
        <td><%= enquiry.full_name %></td>
        <td><%= enquiry.email %></td>
        <td><%= enquiry.contact_no %></td>
        <td><%= enquiry.alternate_contact_no %></td>
        <td><%= enquiry.center.center_name%></td>
       <td> <%if enquiry.employee.present?%>
        <%= enquiry.employee.name %>
        <%end%></td>
        <td><%= link_to 'Show', enquiry,class: "btn btn-blue btn-sm" %></td>
        <td><%= link_to 'Edit', edit_enquiry_path(enquiry),class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Remarks', remark_enquiry_path(enquiry),class: "btn btn-red btn-sm" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


