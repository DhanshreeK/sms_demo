<%= render 'layouts/messages'%>
<div class="row">
        <div class="col-lg-12">
        <br><br>
          <div class="panel panel-default">
            <div class="panel-heading clearfix">
              <h3 class="panel-title">University Details</h3>
              <ul class="panel-tool-options"> 
                <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
              </ul>
            </div>
            <div class="panel-body">
            <%= link_to 'New University', new_university_path,class: "btn btn-link" %>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTables-example" >
  <thead>
    <tr>
  
      <th>University name</th>
      <th>Description</th>
        <th>Status</th>
       <th>Attachment Name</th>
      <th>Attachment</th>
    
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <%@universities.each do |university|%>
      <tr>
        <td><%= university.university_name %></td>
        <td><%= university.description %></td>
        <td><%= university.status %></td>
        <% university.unversity_attachments.each do |p|%>
        <td><%=p.attachment_name%></td>
        <td><%=link_to "Download",p.attachment.url,target: '_blank',class: 'btn btn-link'%></td>
        <% end %><br>
        <td><%= link_to 'Show', university,class: "btn btn-blue btn-sm" %></td>
        <td><%= link_to 'Edit', edit_university_path(university),class: "btn btn-success btn-sm" %></td>
        <!-- <td><%= link_to 'Destroy', university, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-red btn-sm" %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
</div>
</div>
</div>
</div>

